{
  "name": "Bun + Storybook",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "BUN_VERSION": "1.3.1"
    }
  },
  "postCreateCommand": "bun install",
  "postAttachCommand": {
    "server": "bun run preview"
  },
  "forwardPorts": [6006],
  "portsAttributes": {
    "6006": {
      "label": "Storybook",
      "onAutoForward": "openPreview"
    }
  },
  "customizations": {
    "codespaces": {
      "openFiles": [".storybook/main.ts"]
    },
    "vscode": {
      "extensions": []
    }
  }
}
