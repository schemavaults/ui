{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "moduleResolution": "Bundler",
    "target": "esnext",
    "module": "ESNext",
    "outDir": "dist",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "allowJs": false,
    "jsx": "react-jsx",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "paths": {
      "@/*": ["./src"],
      "@/components/*": ["./src/components/*"],
      "@/hooks/*": ["./src/components/hooks/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/framer-motion": ["./src/framer-motion"]
    },
    "noEmit": false,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "old_ui",
    "dist",
    "**/**.stories.tsx",
    "**/**.stories.ts"
  ]
}
